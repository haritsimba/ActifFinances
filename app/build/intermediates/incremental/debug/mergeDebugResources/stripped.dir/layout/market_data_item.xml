<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btc"
            android:scaleType="centerCrop"
            android:id="@+id/bc_icon"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textFontWeight="50"
            android:layout_height="wrap_content"
            android:text="blockchain name"
            android:layout_toEndOf="@+id/bc_icon"
            android:id="@+id/bc_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btc"
            android:id="@+id/bc_symbol"
            android:layout_toEndOf="@+id/bc_icon"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/bc_name"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price_change"
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:id="@+id/bc_price_change"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/pourcentage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:id="@+id/pourcentage"
            android:text="%"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bc_price_change"
            android:layout_toStartOf="@+id/bc_price"
            android:text="$"
            android:layout_marginEnd="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bc_price_change"
            android:text="price"
            android:id="@+id/bc_price"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>