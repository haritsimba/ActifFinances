<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/colx"
        android:id="@+id/feed_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commentaire"
            android:layout_toEndOf="@+id/feed_logo"
            android:layout_marginStart="10dp"
            android:id="@+id/feed_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_name"
        android:layout_toEndOf="@+id/feed_logo"
        android:text="miova"
        android:id="@+id/feed_user"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feed_date"
        android:text="date"
        android:layout_below="@+id/feed_user"
        android:layout_toEndOf="@id/feed_logo"
        android:layout_marginStart="10dp"
        />






</RelativeLayout>